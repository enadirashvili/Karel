function main() {
while (frontIsClear()) {
   
   nextStep1();
   nextStep2();
}
   
}


function nextStep1() {
      move();
      putBeeper();
      turnLeft();
      move();
      putBeeper();
      move();
      putBeeper();
      turnRight();
   }
      
function nextStep2() {
   if (beepersPresent()) {
      turnRight();
      move();
      move();
      turnLeft();
      move();
   }
}
